# WebX Pay Configuration
WEBX_PAY_CHECKOUT_URL=https://stagingxpay.info/index.php?route=checkout/billing
WEBX_PAY_SECRET_KEY=your-secret-key-here
WEBX_PAY_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEAyour_public_key_here
-----END PUBLIC KEY-----
WEBX_PAY_ENC_METHOD=RSA

# Application Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3001
NODE_ENV=development
PORT=3000

# Webhook Redirect URLs (Optional)
# If these are provided, webhook will redirect to these URLs with query parameters
# If not provided, webhook will return JSON response
WEBX_PAY_REDIRECT_ON_SUCCESS=http://localhost:3001/payment-success
WEBX_PAY_REDIRECT_ON_FAILURE=http://localhost:3001/payment-failure

# To test JSON response mode, comment out or remove the redirect URLs above
